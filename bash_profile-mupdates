  echo exiting
  exit 1
fi

if [ ! -n "$2+x" ]; then
  echo $2 is not set
  echo exiting
  exit 1
fi

git rm -rf "$1"
curl "http://ftp.drupal.org/files/projects/$1-$2.tar.gz" | tar xz
