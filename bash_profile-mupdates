# Module security update, based on Georg Cassie's script for updating modules, modified by MGM for additional variables (module, module version#, ticket#
function svn-mupdate-sec {
if [ ! -n "$1+x" ]; then
  echo $1 is not set
  echo exiting
  exit 1
fi

if [ ! -n "$2+x" ]; then
  echo $2 is not set
  echo exiting
  exit 1
fi

svn rm "$1"
svn ci -m "MGM@acquia, $3: Module Security Update, cleanup, removing $1 module"
curl "http://ftp.drupal.org/files/projects/$1-$2.tar.gz" | tar xz
svn add --force "$1"
svn ci -m "MGM@acquia, $3: Module Security Update, adding $1-$2"
}
# Update a module, SVN, variables (module, module version#, ticket#)
function svn-mupdate {
if [ ! -n "$1+x" ]; then
  echo $1 is not set
  echo exiting
  exit 1
fi

if [ ! -n "$2+x" ]; then
  echo $2 is not set
  echo exiting
  exit 1
fi

svn rm "$1"
svn ci -m "MGM@acquia, $3: Module Update, cleanup, removing $1 module."
curl "http://ftp.drupal.org/files/projects/$1-$2.tar.gz" | tar xz
svn add --force "$1"
svn ci -m "MGM@acquia, $3: Module Update, adding $1-$2."
}
# Install New Module, variables (module, module version#, ticket#)
function svn-mupdate-add {
if [ ! -n "$1+x" ]; then
  echo $1 is not set
  echo exiting
  exit 1
fi

if [ ! -n "$2+x" ]; then
  echo $2 is not set
  echo exiting
  exit 1
fi

curl "http://ftp.drupal.org/files/projects/$1-$2.tar.gz" | tar xz
svn add --force "$1"
svn ci -m "MGM@acquia, $3: Module Install.  Adding $1-$2."
}
# GIT update scripts 
# Module security update, variables (module, module version#, ticket#
function git-mupdate-sec {
if [ ! -n "$1+x" ]; then
  echo $1 is not set
  echo exiting
  exit 1
fi

if [ ! -n "$2+x" ]; then
  echo $2 is not set
  echo exiting
  exit 1
fi

git rm -rf "$1"
curl "http://ftp.drupal.org/files/projects/$1-$2.tar.gz" | tar xz
git add "$1"
git ci -am "MGM@acquia, $3: Security Update, adding $1-$2"
}
# Module update, variables (module, module-url, module version#, ticket#
function git-mupdate {
if [ ! -n "$1+x" ]; then
  echo $1 is not set
  echo exiting
  exit 1
fi

if [ ! -n "$2+x" ]; then
  echo $2 is not set
  echo exiting
  exit 1
fi

git rm -rf "$1"
curl "http://ftp.drupal.org/files/projects/$1-$2.tar.gz" | tar xz
git add "$1"
git ci -am "MGM@acquia, $3: Module Update, adding $1-$2"
}

