#########################################################
#
# Using this file:
#
# Edit --USERNAME-- and replace with your bastion user name
# EDIT --KEYNAME-- and replace with the name of your key file (verify that the path is correct)
# Place this file in ~/.ssh/config
#
#########################################################



Host bastion
  HostName bastion-21.network.hosting.acquia.com
  User --USERNAME--
  Port 40506
  ServerAliveInterval 60
  ControlMaster auto
  ControlPath /tmp/ssh_mux_%h_%p_%r
  ForwardAgent yes
  IdentityFile ~/.ssh/--KEYNAME--

Host bastion-21 bastion-22
  HostName %h.network.hosting.acquia.com
  User --USERNAME--
  Port 40506
  ServerAliveInterval 60
  ControlMaster auto
  ControlPath /tmp/ssh_mux_%h_%p_%r
  ForwardAgent yes
  IdentityFile ~/.ssh/--KEYNAME--

Host svn-*.prod.hosting.acquia.com svn-*.devcloud.hosting.acquia.com
  HostName %h
  User --USERNAME--
  Port 22
  ServerAliveInterval 60
  ForwardAgent yes
  StrictHostKeyChecking no
  IdentityFile ~/.ssh/--KEYNAME--

Host *.hosting.acquia.com
  ProxyCommand ssh bastion nc %h %p
  HostName %h
  User --USERNAME--
  Port 40506
  ServerAliveInterval 60
  ForwardAgent yes
  StrictHostKeyChecking no
  IdentityFile ~/.ssh/--KEYNAME--

