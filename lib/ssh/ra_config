Host jonathan-web
  ProxyCommand ssh -F ~/.ssh/ah_config bastion nc %h %p
  HostName 173.255.224.16
  User acquia
  Port 60666
  ServerAliveInterval 60
  ForwardAgent yes
  StrictHostKeyChecking no
